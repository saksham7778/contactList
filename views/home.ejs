<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    	<link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>

    <body >
    
    <div class="w3-container outer">
        <h1 id ="page-heading">
            <i class="fas fa-address-book" ></i>
            My Contacts List
        </h1>

        <div id="form-div">
    	
            <form class="form-inline" id="formm" action="/create-contact" method="POST"  >
                <div class="form-group">
                    <label for="email" id="email-label"><b>NAME:</b></label>
                    <input class="form-control" id="email" type="text" name="name" placeholder="Enter your name .." required>
                    <!-- <input type="email" class="form-control" id="email"> -->
                </div>
        
                <div class="form-group">
                    <label for="pwd" id="number-label"><b>CONTACT NUMBER: </b></label>
                    <input class="form-control" id="pwd" type="tel" id="phone" name="phone" placeholder="Enter the 10 digits of your number .." pattern="[0-9]{10}" required>
                    <!-- <input class="form-control" id="pwd" type="text" name="phone" placeholder="Please enter your phone number  .." required> -->
                </div>
                
                <!-- <button type="submit" class="btn btn-default"> Add Contact !</button> -->
                <div class="form-group"></div>
                    <button type="submit" class="btn btn-success" id="submit-button"> Submit</button>
                </div>
            </form>
    
        </div>
      


        <div>

            <ul class="w3-ul " style="width: 60%;margin-left: 20%;">
                
                <% for(let i of contact_list ){ %>
                <li class="w3-bar w3-card-4 w3-hoverable list-item" style="margin-bottom: 2.5%;">
                  <span class="w3-bar-item w3-button w3-xlarge w3-right " id="delete-option" style="margin-top:2%;margin-right: 5%;">
                    <a href="/delete-contact/?id=<%= i._id%>" >
                        <i class="fas fa-window-close"  style="color:red;border: 3px solid white;border-radius: 20%;"> </i>
                    </a>

                    
                  </span>
                  <img  src="../images/avatar.jpg" class="w3-bar-item w3-circle w3-hide-small" style="width:85px">
                  <div class="w3-bar-item">
                    <span id="span-name">      <b><%= i.name  %></b>   </span><br>
                    <span id="span-number">    <%= i.phone %>    </span>
                  </div>
                </li>
                <% } %>
            </ul>


        </div>
       
        <!-- <form action="/create-contact" method="POST"  id="form">
            <input id="name_id" type="text" name="name" placeholder="Please enter your name .." required>
            
            <input id="phone_id" type="text" name="phone" placeholder="Please enter your phone number  .." required>
           
            <button type="submit"> Add Contact !</button>
        </form> -->

    </div>
